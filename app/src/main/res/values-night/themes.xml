<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.PDFViewer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        
        <item name="colorPrimary">@color/black</item>

        <item name="colorSecondary">@color/dark_color2</item>

    </style>



    //app_bar dark color
    <style name="app_bar">
        <item name="android:color">@color/dark_color2</item>
    </style>


    <style name="card_background">
        <item name="android:color">@color/dark_color2</item>

    </style>

    // recyclerView Background
    <style name="recycler_view">
        <item name="android:background">@color/light_color2</item>
    </style>

    <style name="drawerStyle">
        <item name="android:background">@color/dark_color</item>
    </style>


    <style name="Screen">
        <item name="android:background">@color/black</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="lightText">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="CardViewWhiteTheme">

        <item name="cardCornerRadius">@dimen/_20sdp</item>
        <item name="cardBackgroundColor">@color/dark_color2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_250sdp</item>

        <!-- Add other card view attributes as needed for the black theme -->
    </style>


    <style name="pageCard">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="editText">
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="button_theme" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="rippleColor">@color/white</item>
        <item name="android:drawableLeft">@drawable/share</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_theme_delete" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="rippleColor">@color/white</item>
        <item name="android:drawableLeft">@drawable/share</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>